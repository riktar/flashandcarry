<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "it.mtncompany.flashcarry"
        version     = "0.0.6" >
    
    <name>Flash &amp; Carry</name>
    
    <description>
        Flash &amp; Carry App
    </description>
    
    <icon src="icon.png" />
    
    <!-- iPhone 6 / 6+ -->
    <icon src="icon.png" platform="ios" width="180" height="180" />

    <!-- iPhone / iPod Touch  -->
    <icon src="icon.png" platform="ios" width="60" height="60" />
    <icon src="icon.png" platform="ios" width="120" height="120" />

    <!-- iPad -->
    <icon src="icon.png" platform="ios" width="76" height="76" />
    <icon src="icon.png" platform="ios" width="152" height="152" />

    <!-- Settings Icon -->
    <icon src="icon.png" platform="ios" width="58" height="58" />

    <!-- Spotlight Icon -->
    <icon src="icon.png" platform="ios" width="40" height="40" />
    <icon src="icon.png" platform="ios" width="80" height="80" />
    
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />
    
    <content src="index.html" />
    <access origin="*" />
    
</widget>