<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "it.mtncompany.flashcarry"
    version     = "0.0.4" >
    
    <name>Flash &amp; Carry</name>
    
    <description>
        Flash &amp; Carry App
    </description>
    
    <icon src="img/logo.png" width="100" height="100" />
    
    <platform name="ios">
              <!-- iOS 8.0+ -->
              <!-- iPhone 6 Plus  -->
              <icon src="img/logo.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="img/logo.png" width="60" height="60" />
              <!-- iPad -->
              <icon src="img/logo.png" width="76" height="76" />
              <icon src="img/logo.png" width="152" height="152" />
              <!-- iOS 6.1 -->
              <!-- Spotlight Icon -->
              <icon src="img/logo.png" width="40" height="40" />
              <icon src="img/logo.png" width="80" height="80" />
              <!-- iPhone / iPod Touch -->
              <icon src="img/logo.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="img/logo.png" width="72" height="72" />
              <icon src="img/logo.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="img/logo.png" width="58" height="58" />
              <!-- iPad Spotlight and Settings Icon -->
              <icon src="img/logo.png" width="50" height="50" />
              <icon src="img/logo.png" width="100" height="100" />
     </platform>
    
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="5000" />
    
    <content src="index.html" />
    <access origin="*" />
    
</widget>